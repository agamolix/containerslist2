######## PROJECT ###############################################################

NAME = test

######## SOURCE FILES ##########################################################

SRC_FILES = main         
OBJ = $(addsuffix .o, $(SRC_FILES))

######## FLAGS #################################################################

CC = g++ 
CFLAGS = -Wall -Wextra -Werror -std=c++98

######## RULES #################################################################

all: $(NAME)

$(NAME): $(OBJ) 
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY: clean fclean re

clean: 
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re:	fclean all
